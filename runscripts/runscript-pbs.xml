<runscript output="output">

	<machine name="hpc" cpu="24x8xE5520@2.27GHz" memory="24GB"/>
	
	<config name="pbs-generic" template="templates/seq-generic.sh"/>
	<system name="clasp" version="3.4.0" measures="clasp" config="pbs-generic">
		<setting name="one-as" tag="one-as" cmdline="--stats 1" ppn="4" procs="1 2 4 8 16" pbstemplate="templates/single.pbs"/>
	</system>
	
	<pbsjob name="pbs-generic" timeout="1200" runs="1" script_mode="timeout" walltime="23:59:59" cpt="4"/>

	<benchmark name="pbs-suite">
		<folder path="benchmarks/clasp"/>
	</benchmark>

	<project name="clasp-one-as" job="pbs-generic">
		<runtag machine="hpc" benchmark="pbs-suite" tag="*all*"/>
	</project>

</runscript>
